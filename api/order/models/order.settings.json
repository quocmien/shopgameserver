{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "Order"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "country": {
      "type": "string"
    },
    "address": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    },
    "notes": {
      "type": "text"
    },
    "email": {
      "type": "string"
    },
    "priceTotal": {
      "type": "decimal"
    },
    "Status": {
      "type": "enumeration",
      "enum": [
        "Not_Confirm",
        "Comfirm",
        "Moving_Delivery",
        "Delivery_Failed",
        "Successful_Delivery"
      ]
    },
    "payment_status": {
      "type": "boolean",
      "default": false
    }
  }
}
